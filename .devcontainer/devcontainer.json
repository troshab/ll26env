{
  "name": "ll26env-pwn",
  "image": "ghcr.io/troshab/ll26env:latest",

  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined"
  ],

  "forwardPorts": [6080, 5901],

  "postCreateCommand": "bash .devcontainer/user-setup.sh",

  "containerEnv": {
    "JAVA_HOME": "/usr/lib/jvm/java-21-openjdk-amd64",
    "VNC_PASSWORD": "pwn",
    "VNC_RESOLUTION": "1280x720x24"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "13xforever.language-x86-64-assembly",
        "ms-vscode.hexeditor"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
